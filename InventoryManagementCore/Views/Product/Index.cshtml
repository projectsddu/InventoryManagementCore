@model IEnumerable<InventoryManagementCore.Models.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<div class="row">

<h1 class="col-10 display-4" style="font-size:45px">View Products</h1>
<p class="col-2" style="margin-top:1%">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
</div>
<hr class="bg-secondary" style="border: 2px solid #6c757d; " />
<style>
    .card {
        box-shadow: 0 12px 16px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        margin-top: 3%;
        padding:0px;
        text-align: center;
        font-family: arial;
    }

        .card-button {
            border: none;
            outline: 0;
            padding: 12px;
            color: white;
            background-color: rgb(0, 0, 0);
            text-align: center;
            cursor: pointer;
            width: 100%;
            font-size: 18px;
        }

            .card-button:hover {
                opacity: 0.8;
            }
    .card-img-top{
        width:100%;
        height:164px;
        object-fit:cover
    }
</style>

<div class=" row">

    @foreach (var item in Model)
    {
        var photoPath = "~/Images/" + (item.ProductPhotoPath ?? "DefaultProductImage.jpg");
    <div class="card col-4">
        @*<img src="https://source.unsplash.com/random/1600x900" alt="Random" style="width: 100%" />*@
        <img class="card-img-top" src="@photoPath" asp-append-version="true" alt="Random" style="width: 100%"/>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.ProductName): @Html.DisplayFor(modelItem => item.ProductName)</b></li>
            <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.Category): @Html.DisplayFor(modelItem => item.Category.CategoryName)</b></li>
            <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.Quantity): @Html.DisplayFor(modelItem => item.Quantity)</b></li>
            <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.BuyingPrice): &#x20b9 @Html.DisplayFor(modelItem => item.BuyingPrice)</b></li>
            <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.SellingPrice): &#x20b9 @Html.DisplayFor(modelItem => item.SellingPrice)</b></li>
        </ul>
        <div class="btn-group">
            <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn card-button btn-success view-product-update-btn">Update</a>
            <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn card-button btn-danger view-product-delete-btn">Delete</a>
        </div>
    </div>
    }
    </div>