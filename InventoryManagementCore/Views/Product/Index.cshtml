@model IEnumerable<InventoryManagementCore.Models.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<div class="row">

    <h1 class="col-4 display-4" style="font-size:45px; padding: 0%; display: inline;">View Products</h1>
    <div class="col-6 wrapper-search-box">
        <div class="searchBar">
            <input id="searchQueryInput" type="text" name="searchQueryInput" placeholder="Search" value="" />
            <button id="searchQuerySubmit" type="submit" name="searchQuerySubmit">
                <svg style="width: 24px; height: 24px; margin-top: -182%;" viewBox="0 0 24 24">
                    <path fill="#666666" d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
                </svg>
            </button>
        </div>
    </div>
    <p class="col-2" style="margin-top:1%">
        <a class="btn btn-primary" asp-action="Create" style="margin-top: -1%; margin-left: 31%;">Create New</a>
    </p>
</div>
<hr class="bg-secondary" style="border: 2px solid #6c757d; margin-top: -15%; margin-left: -1%;" />
<style>
    .card {
        box-shadow: 0 12px 16px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        margin-top: 3%;
        padding: 0px;
        text-align: center;
        font-family: arial;
    }

    .card-button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: rgb(0, 0, 0);
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

        .card-button:hover {
            opacity: 0.8;
        }

    .card-img-top {
        width: 100%;
        height: 164px;
        object-fit: cover
    }
</style>

<div class=" row">

    @foreach (var item in Model)
    {
        var photoPath = "~/Images/" + (item.ProductPhotoPath ?? "DefaultProductImage.jpg");
        <div class="card col-4">
            @*<img src="https://source.unsplash.com/random/1600x900" alt="Random" style="width: 100%" />*@
            <img class="card-img-top" src="@photoPath" asp-append-version="true" alt="Random" style="width: 50%; margin-left: 25%;" />
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.ProductName): @Html.DisplayFor(modelItem => item.ProductName)</b></li>
                <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.Category): @Html.DisplayFor(modelItem => item.Category.CategoryName)</b></li>
                <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.Quantity): @Html.DisplayFor(modelItem => item.Quantity)</b></li>
                <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.BuyingPrice): &#x20b9 @Html.DisplayFor(modelItem => item.BuyingPrice)</b></li>
                <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.SellingPrice): &#x20b9 @Html.DisplayFor(modelItem => item.SellingPrice)</b></li>
            </ul>
            <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn card-button btn-success view-product-update-btn">Update</a>
                <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn card-button btn-danger view-product-delete-btn">Delete</a>
            </div>
        </div>
    }
</div>