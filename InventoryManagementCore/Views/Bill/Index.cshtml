@model IEnumerable<InventoryManagementCore.Models.Models.Bill>

@{
    ViewData["Title"] = "Index";
}

<div class="row">

    <h1 class="col-4 display-4" style="font-size:45px; padding: 0%; display: inline;">View Bills</h1>
    <div class="col-6 wrapper-search-box">
        <div class="searchBar">
            <input id="searchQueryInput" type="text" name="searchQueryInput" placeholder="Search" value="" />
            <button id="searchQuerySubmit" type="submit" name="searchQuerySubmit">
                <svg style="width: 24px; height: 24px; margin-top: -182%;" viewBox="0 0 24 24">
                    <path fill="#666666" d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
                </svg>
            </button>
        </div>
    </div>
    <p class="col-2" style="margin-top:1%">
        <a class="btn btn-primary" asp-action="Create" style="margin-top: -1%; margin-left: 31%;">Create New</a>
    </p>
</div>
<hr class="bg-secondary" style="border: 2px solid #6c757d; margin-top: -15%; margin-left: -1%;" />

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BillDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillTotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillTotalPaid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BillDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillTotalCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillTotalPaid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.CustomerName)
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.BillId">Edit</a> |
                    <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.BillId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
