@model IEnumerable<InventoryManagementCore.Models.Models.Bill>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BillDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillTotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillTotalPaid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BillDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillTotalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillTotalPaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerAddress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BillId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BillId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BillId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
